<div class='container-fluid'>

	<div class='row'>
		<div class='col-sm-2'></div>
		<div class='col-sm-8'>
			<h1> <%=@dog.dog_name %>'s info</h1>
		</div>
		<div class='col-sm-2'></div>
	</div>


		<p>Breed: <%=@dog.breed %></p>
		<p>Birthday: <%=@dog.birthday %></p>
		<p>Food low checkbox? <%=check_box_tag 'food_low' , 'yes', @dog.food_low_flag, disabled:true %></p>
		<p>Treats low checkbox? <%=check_box_tag 'treats_low' , 'yes', @dog.treats_low_flag, disabled:true %></p>
		<% if @dog.image_file_name != nil%>
	<!-- 			<div class="row">
					<div class='col-sm-2'></div>
					<div class='col-sm-8'> -->
						<%= image_tag @dog.image.url(:thumb) %>
	<!-- 				</div>
					<div class='col-sm-2'></div>
				</div> -->
			<% end %>


		<h3>My owners are</h3>

		<!-- Loop to show all owners for this dog -->
	<div class='row'>
		<div class='col-sm-1'></div>
		<div class='col-sm-10'>
			<table>	
				<thead>
					<th>Picture</th>
					<th>Name</th>
					<th colspan="2">Actions</th>
				</thead>
				<tbody>
					<% @owners.each do |owner| %>
						<tr>
							<td><%= image_tag owner.image.url(:thumb)%></td>
							<td><%= owner.full_name%></td>
							<td><%=link_to "See owner details", owner_path(owner) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

		</div>
		<div class='col-sm-1'></div>
	</div> <!-- End row div -->

	<div class='row'>

	</div>

	<div class='row'>

	</div>
</div><!--  End fluid container div -->

