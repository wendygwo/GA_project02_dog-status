<div class='dogContainer'>
	<div class='container-fluid'>
		<div class='row'>
			<div class='col-sm-12'>
					<h2> Edit this dog's information</h2>
			</div>
		</div>

		<div class='row'>
			<div class='col-sm-4'></div>
			<div class='col-sm-4 text-left'>
				<%= form_for @dog do |f| %>

					<p>Name: <%= f.text_field :dog_name %></p>
					<p>Breed: <%=f.text_field :breed %></p>
					<p>Birthday: <%=f.date_field :birthday %></p>
					<p>Food low? <%=f.check_box :food_low_flag %></p> <!-- Shows checkbox based on database value -->
					<p>Treats low? <%=f.check_box :treats_low_flag %></p> <!-- Shows checkbox based on database value -->
					<% if @dog.image_file_name != nil %>
						<p>Current picture</p>
						<%= image_tag @dog.image.url(:thumb) %>  <!-- Show current profile picture -->
					<%else %>
						<p>Choose a profile picture!</p>
					<% end %>
				  <%=f.file_field :image, class:'text-center' %> <br />

					<%= f.submit 'Save your updates to this dog!' %>
					<br />
					<%= link_to "Cancel changes", owner_path(current_owner) %> 
				<% end %>
			</div>
			<div class='col-sm-4'></div>
		</div>

		<div class='row'>
			<div class='col-sm-12'>
				<%= link_to "Show this dog's details", dog_path %> | 
				<%= link_to 'Delete this dog', :dog, method: :delete, data: {confirm: 'Are you sure you want to delete this dog?'} %> |
				<%= link_to 'Back to dogs list', dogs_path%>
			</div>
		</div>
	</div>
</div>