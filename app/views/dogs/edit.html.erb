<div class='container-fluid'>
	<h2 class='text-center'> Edit this dog's information</h2>


	<div class='row'>
		<div class='col-xs-4 col-xs-offset-4 text-left'>
			<%= bootstrap_form_for @dog do |f| %>

				<p><%= f.text_field :dog_name %></p>
				<p><%=f.text_field :breed %></p>
				<p><%=f.date_field :birthday %></p>
				<p><%=f.check_box :food_low_flag, label: "Food low?" %></p> <!-- Shows checkbox based on database value -->
				<p><%=f.check_box :treats_low_flag, label: "Treats low?"  %></p> <!-- Shows checkbox based on database value -->
				<% if @dog.image_file_name != nil %>
					<p class='text-center'>Current picture</p>
					<%= image_tag @dog.image.url(:thumb), class:'center-block'%>  <!-- Show current profile picture -->
				<% end %>
			  <%=f.file_field :image, label: "Choose a profile picture"  %> <br />

				<%= f.submit 'Save your updates!', class:'btn btn-primary btn-lg center-block'  %>
				<br />
				<div class='text-center'>
					<%= link_to "Cancel changes", owner_path(current_owner)%> 
				</div>
			<% end %>
		</div>

	</div>

	<br />
	<br />
	<div class='row'>
		<div class='col-sm-12'>
			<%= link_to "Show this dog's details", dog_path %> | 
			<%= link_to 'Delete this dog', :dog, method: :delete, data: {confirm: 'Are you sure you want to delete this dog?'} %> |
			<%= link_to 'Back to dogs list', dogs_path%>
		</div>
	</div>
</div>
