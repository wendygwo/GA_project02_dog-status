<%# @owner.errors.full_messages.each do |error| %>
<!-- <p><%#= error %></p> -->
<%# end %>
<div class='container-fluid'>
	<div class='row'>
		<div class='col-xs-4'></div>
		<div class='col-xs-4'>
			<h1>Sign up as a new owner!</h1>
		</div>
		<div class='col-xs-4'></div>
	</div>

	<div class='row'>
		<div class='col-xs-2'></div>
		<div class='col-xs-8'>
			<%= bootstrap_form_for @owner do |f|%>
				
				<p><%= f.text_field :username, class: 'signupfield' %></p>
				<p><%= f.text_field :first_name, class: 'signupfield' %></p>
				<p><%= f.text_field :last_name, class: 'signupfield' %></p>
			
				<p>Profile picture:</p><br />
				<%=f.file_field :image, class:'text-center' %> <br />
				
				<p><%=f.password_field :password, class: 'signupfield' %></p>

				<p><%=f.password_field :password_confirmation, class: 'signupfield' %></p>

				<%= f.submit 'Add this owner' %>
			<% end %>
		</div>

		<div class='col-xs-2'></div>

	</div> <!-- End row -->

</div>