<div class='ownerContainer'>
	<h1>Sign up as a new owner!</h1>

	<%= form_for @owner do |f|%>
		<div id='username'
			<p>Username: <%= f.text_field :username %></p>
			<!-- Warning for non-unique owner name -->
			<p class="text-danger"><%=@owner.errors[:username][0]%></p>
		</div>

		<p>First name: <%= f.text_field :first_name %></p>
		<!-- Warning for first name -->
		<p class="text-danger"><%=@owner.errors[:first_name][0]%></p>

		<p>Last name: <%= f.text_field :last_name %></p>
		<!-- Warning for last name -->
		<p class="text-danger"><%=@owner.errors[:last_name][0]%></p>

		<p>Profile picture:</p><br />
		<%=f.file_field :image, class:'text-center' %> <br />
		
		<p>Password: <%=f.password_field :password %></p>
		<!-- Warning for password -->
		<p class="text-danger"><%=@owner.errors[:password][0]%></p>

		<p>Password confirmation: <%=f.password_field :password_confirmation %></p>
		<!-- Warning for password -->
		<p class="text-danger"><%=@owner.errors[:password_confirmation][0]%></p>

		<%= f.submit 'Add this owner' %>
	<% end %>
</div>