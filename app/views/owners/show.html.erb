<div class='container-fluid'>

	<div class='row'>
		<div class='col-sm-2'></div>
		<div class='col-sm-8'>
			<h1> Welcome to your doggie dashboard <%=@owner.first_name%>!</h1>
		</div>
		<div class='col-sm-2'></div>
	</div>
	<!-- Only show the picture if there's one uploaded. 
	Without the if statement, a broken picture link shows up -->
	<% if @owner.image_file_name != nil%>
		<div class="row">
			<div class='col-sm-2'></div>
			<div class='col-sm-8'>
				<%= image_tag @owner.image.url(:thumb) %>
			</div>
			<div class='col-sm-2'></div>
		</div>
	<% end %>

	<div class='row'>
		<div class='col-sm-1'></div>
		<div class='col-sm-10'>
			<table>	
				<thead>
					<th></th>
					<th>Name</th>
					<th>Food low?</th>
					<th>Treats low?</th>
					<th colspan="3">Actions</th>
				</thead>
				<tbody>
					<% @dogs.each do |dog| %>
						<tr>
							<td><%= image_tag dog.image.url(:thumb)%></td>
							<td><%= dog.dog_name%></td>
							<td><%= check_box_tag 'food_low', 'yes', dog.food_low_flag, disabled:true%></td>
							<td><%= check_box_tag 'treats_low', 'yes',dog.treats_low_flag, disabled:true%></td>
							<td><%=link_to "Edit status", edit_dog_path(dog) %></td>
							<td><%=link_to "See details", dog_path(dog) %></td>
							<!-- <td><%#=link_to "Delete relationship with dog - TO FILL IN", dog, :controller => 'relationship', :action => 'destroy' %></td> -->
							<td><%= link_to 'Delete relationship!', relationship_path(owner_id: params[:id], dog_id: dog.id), method: :delete %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class='col-sm-1'></div>
	</div>
</div>

<p><%= link_to 'Add a new dog', new_dog_path(:owner_id => @owner.id) %></p> <!-- This lets you pass in a parameter of your own naming -->