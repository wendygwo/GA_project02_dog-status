<div class="container-fluid">

	<div class="row">
		<p id="notice" class='col-xs-6 col-xs-offset-3 text-center'><%= notice %></p>
	</div>
	
	<div class="row">
		<div class='col-xs-6 col-xs-offset-3 text-center'>
			<h1>Log-in!</h1>	
		</div>
	</div>

	<div class="row">
		<div class='col-xs-12 text-center'>
			<%if params[:error_message] != nil %>
				<p class="text-danger"><%= params[:error_message] %></p>
			<% end %> 
			</div>
	</div>

	<%= bootstrap_form_for @owner, :url => { :controller => "sessions", :action => "create" } do |f| %> <!-- See the comment under the f.submit line for details. the url tells it to go to the sessions path, create method instead-->

		<div class="row">
			<div class='col-xs-4 col-xs-offset-4'>
				<p><%= f.text_field :username, class: 'signupfield' %></p>

				<p><%= f.password_field :password, class: 'signupfield' %></p>

				<p><%=f.submit 'Log yourself in', :class =>  'btn btn-primary center-block' %> </p><!-- This will post back to the users controller by default because it's a user. We need to override this behavior -->
			</div>
		</div>
	<% end %>
	<!-- Forgot password link -->
	<div class="row">
		<div class='col-xs-8 col-xs-offset-2 text-center'>
			<%= link_to 'Forgot password?', new_password_reset_path %>
		</div>
	</div>
	<!-- New user sign-up link -->
	<div class="row">
		<div class='col-xs-8 col-xs-offset-2 text-center'>
			<%= link_to 'New user? Create an account here', new_owner_path %>
		</div>
	</div>
</div>
		